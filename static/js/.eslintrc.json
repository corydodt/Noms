{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "jasmine": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "angular": true,
        "app": true,
        "sinon": true,
        "inject": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": 0,
        "semi": [
            "error",
            "always"
        ]
    }
}

#!/bin/bash

export NOMS_VERSION=$(git describe --all | grep heads | head -1 | cut -d/ -f2-)
export NOMS_DB_HOST=mongo

# set NOMS_COMPOSE_OPTIONS if you wish.
# example: NOMS_COMPOSE_OPTIONS="--build"
echo NOMS_COMPOSE_OPTIONS="$NOMS_COMPOSE_OPTIONS"

docker-compose -f deployment/docker-compose.yml up $NOMS_COMPOSE_OPTIONS

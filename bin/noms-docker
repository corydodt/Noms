#!/bin/bash

export NOMS_VERSION=$(git describe --all | grep heads | head -1 | cut -d/ -f2-)
export NOMS_DB_HOST=mongo

# example: export NOMS_COMPOSE_OPTIONS="--build"
echo NOMS_COMPOSE_OPTIONS="$NOMS_COMPOSE_OPTIONS" | tee deployment/env

echo NOMS_VERSION="$NOMS_VERSION" | tee -a deployment/env
echo NOMS_DB_HOST="$NOMS_DB_HOST" | tee -a deployment/env

docker-compose -f deployment/docker-compose.yml up $NOMS_COMPOSE_OPTIONS
